{
  "name": "ah-jawans-frontend",
  "version": "1.0.0",
  "description": "a community of like minded authors to foster inspiration and innovation by leveraging the modern web.",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --open --hot --mode development",
    "build": "webpack --mode production",
    "test": "jest --watchAll \"-- --coverage\"",
    "test:CI": "jest \"-- --coverage\"",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andela/ah-jawans-frontend.git"
  },
  "author": "Jawan Developers",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/andela/ah-jawans-frontend/issues"
  },
  "homepage": "https://github.com/andela/ah-jawans-frontend#readme",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "24.8.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.2.0",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16.3": "1.7.1",
    "enzyme-to-json": "3.4.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-react": "^7.14.3",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "nyc": "^14.1.1",
    "jest": "24.8.0",
    "redux-devtools": "^3.5.0",
    "style-loader": "^1.0.0",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.8.0"
  },
  "dependencies": {
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.0.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "sass-loader": "^7.2.0",
    "redux-immutable-state-invariant": "^2.1.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./__tests__/setup/setupEnzyme.js"
    ],
    "testPathIgnorePatterns": [
      "./__tests__/setup/"
    ],
    "collectCoverageFrom": [
      "<rootDir>/**/*.js",
      "!<rootDir>/webpack.config.js",
      "!<rootDir>/node_modules",
      "!<rootDir>/src/index.js",
      "!<rootDir>/coverage/**/*.*",
      "!<rootDir>/build/**/*.*",
      "!<rootDir>/dist/**/*.*"
    ]
  }
}
